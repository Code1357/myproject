 
<head>
    <link href="/css/listinfo.css" rel="stylesheet">
    <link href="/css/recorder.css" rel="stylesheet">
    <link href="/css/modal.css" rel="stylesheet">
</head>

<%- include('r_header'); %>

<div id="mask" class="hidden"></div> <!-- 背景全体を暗くする -->

 <p>記録のページ</p>

 <div class="user_list">
 <div class="user_list_in">
 <% userList.forEach(userList => { %>
 <ul>
 <li id="staff_list">
 <a href="<%=`/careRecords/users/${userList.user_id}`%>">
<%= userList.user_name %></a>
</li>
</ul>
<% }); %>
</div>
</div>

<div class="data_form">

<form action="<%=`/careRecords/recordCreate/${userId}`%>" method="post">
<p class="record_target">利用者名前：<%= userName%> 性別：<%= gender%> ADL：<%= adl %></p><br>

<input type="datetime-local" name="record_date" id="inputRecordDate" class="recorderDate" placeholder="日時" value="newRecUserConfirmation.record_date" required><br>

<textarea name="record_data" id="inputRecord" class="recorder" placeholder="ここにCare記録を記述してください" value="newRecUserConfirmation.record_data" required></textarea><br>
<input type="reset" value="リセット">

<section id="modal" class="hidden">
      <h3>Care記録を登録して良いですか？</h3>
      <h6 id="recMessage" ></h6>

<button id="close" class="btn" name='action2' value="ぼたん2だよ">戻る</button>
      <button class="btn" name='action' value="ぼたんだよ" >登録</button>
    </section>
  </form>
  <div id="open">
   <div class="modal_on_btn">
    <button id="open_modal">登録</button>
     </div>
  </div>
</div>
  <script src="/js/modalRecord.js"></script>