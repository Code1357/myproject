<div class="data-form">
  <form class="form-signin" action="/staffs/create" method="POST">
    <h2 class="form-signin-heading">Staff 更新</h2>
    <label for="inputEmployee">社員番号</label>
    <input type="number" name="employee" id="inputEmployee" class="form-control" placeholder="社員番号" autofocus>
    <br />
    <label for="inputHereDate">入社日</label>
    <input type="date" name="hire_date" id="inputHereDate" class="form-control" placeholder="入社日" required>
    <br />
    <label for="inputUsername">名前</label>
    <input type="text" name="username" id="inputUsername" class="form-control" placeholder="名前">
    <br />
    <label for="inputBirthday">生年月日</label>
    <input type="date" name="birthday" id="inputBirthday" class="form-control" placeholder="入社日" required>
    <br />
    <label for="inputGender">性別</label>
    <input type="text" name="gender" id="inputGender" class="form-control" placeholder="性別" required>
    <br />
    <label for="inputPosition">役職</label>
    <input type="text" name="position" id="inputPosition" class="form-control" placeholder="役職" required>

    <br />
    <button class="btn" type="submit">更新</button>
  </form>
</div>